{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@app/*": ["application/*"],
      "@infra/*": ["infrastructure/*"]
    }
  },
  "include": ["src"]
}